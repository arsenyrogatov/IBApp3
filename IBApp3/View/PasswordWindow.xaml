<Window x:Class="IBApp3.View.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IBApp3.View"
        mc:Ignorable="d"
        Title="Введите пароль" Height="70" Width="370" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <PasswordBox x:Name="PasswordBox" Height="20" Width="285" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="OKButton" Height="20" Width="55" Content="OK" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</Window>
